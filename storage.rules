rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read/write images
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Explicit rules for Timekeeper Images
    match /employees/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    match /time_snapshots/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
