
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ⚠️ GLOBAL PERMISSION RULE
    // This single rule allows ANY authenticated user to read/write
    // to ANY collection (existing or new) in the entire database.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
  }
}
