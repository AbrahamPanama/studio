rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // 1. GLOBAL RULE (Keeps your Orders/Inventory safe)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // 2. EMPLOYEES
    match /employees/{employeeId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
