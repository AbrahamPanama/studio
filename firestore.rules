
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // 1. GLOBAL RULE (Keep this for your Admin Dashboard)
    // This protects all your orders/inventory
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // 2. EMPLOYEES (Kiosk needs to SEE faces to verify them)
    match /employees/{employeeId} {
      allow read: if true;                 // <--- CHANGED: Public can read (for Kiosk)
      allow write: if request.auth != null; // Only Admins can edit employees
    }

    // 3. TIME ENTRIES (Kiosk needs to CREATE logs)
    match /time_entries/{entryId} {
      allow create: if true;               // <--- CHANGED: Public can clock in
      allow read, update, delete: if request.auth != null; // Public CANNOT see history
    }
  }
}
