
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ⚠️ GLOBAL PERMISSION RULE
    // Allows any logged-in user to read/write ANY collection (orders, inventory, etc.)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Explicit rules for Timekeeper (redundant with global but good for structure)
    match /employees/{employeeId} {
      allow read, write: if request.auth != null;
    }
    match /time_entries/{entryId} {
        allow read, write: if request.auth != null;
    }
  }
}
