
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ⚠️ GLOBAL PERMISSION RULE
    // Allows any logged-in user to read/write ANY collection (orders, inventory, etc.)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
  }
}
