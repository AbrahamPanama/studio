rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // 1. GLOBAL RULE (Keeps your Orders/Inventory safe)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // 2. EMPLOYEES (Allows Kiosk to SEE faces/names)
    match /employees/{employeeId} {
      allow read: if true;                  // <--- CHANGED: Public can read
      allow write: if request.auth != null; // Only Admin can edit
    }

    // 3. TIME ENTRIES (Allows Kiosk to CREATE logs)
    match /time_entries/{entryId} {
      allow create: if true;                // <--- CHANGED: Public can clock in
      allow read, update, delete: if request.auth != null; // Public CANNOT see history
    }
  }
}
